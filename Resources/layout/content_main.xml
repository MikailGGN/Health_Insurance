<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:paddingLeft="5dp"
   android:paddingRight="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    
      android:paddingLeft="11dp"
   android:paddingRight="11dp"   >
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" >
   
   
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_banner_2"
        android:layout_height="400.0px"
     
        android:orientation="vertical">
           

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
                android:textColor="#fffff3"
        android:text="     You have" />

        <TextView
        android:text="8,000 NGN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:id="@+id/txtsubscription1" 
        android:padding="50px"
        android:textSize="35dp"
      android:textColor="#fffff3"
        android:layout_centerHorizontal="true"
                android:textAlignment="center"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
                android:textColor="#fffff3"
        android:text="credit on your Health Plan" 
                
                android:letterSpacing="0.2"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2" >
             <TextView
                 android:layout_marginTop="10dp"
                android:text="Consultations"
                android:letterSpacing="0.1"
                android:textColor="#114084"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            
 <Button
        android:text="Symptoms"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200px"
   android:drawableLeft="@drawable/ic_symptoms"
    android:letterSpacing="0.6"
     android:textSize="21sp"
        android:id="@+id/button_rs"
                android:paddingLeft="20dp"
             android:textAlignment="textStart" 
                 android:drawablePadding="30dp"
                android:background="#3466AA"
                style="@style/Widget.AppCompat.Button.Colored" />

       <!--     --> 
                <Button
        android:text="Schedule A Doctor"
        android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_doctor_round"
        android:layout_width="match_parent"
        android:layout_height="200px"
  android:letterSpacing="0.1"
     android:textSize="21sp"
        android:id="@+id/button_sdtr"
                android:paddingLeft="20dp"
             android:textAlignment="textStart" 
                 android:drawablePadding="30dp"
                android:background="#3466AA"
                style="@style/Widget.AppCompat.Button.Colored" />


            <TextView
                 android:layout_marginTop="10dp"
                android:text="Services"
                 android:letterSpacing="0.1"
                android:textColor="#114084"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
             <Button
                android:layout_marginTop="6dp"
                android:text="Gym"
                android:layout_width="match_parent"
                android:layout_height="190px"
                 android:drawableLeft="@drawable/ic_action_gym"
               android:textSize="20sp"
                android:textColor="#F1F1F1"
                android:letterSpacing="0.6"
                android:background="@drawable/btnblue"
                android:paddingLeft="20dp"
                  android:drawablePadding="30dp"
                android:id="@+id/button_gy" 
                android:textAlignment="textStart"/>

          <Button
                android:layout_marginTop="6dp"
                android:text="Ambulance"
                android:layout_width="match_parent"
                android:layout_height="190px"
                android:id="@+id/button_dr" 
                 android:drawableLeft="@drawable/ic_action_ambulance"
    android:textSize="20sp"
                android:textColor="#F1F1F1"
                android:letterSpacing="0.6"
                android:background="@drawable/btnblue"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                 android:drawablePadding="30dp"/>
            <Button
                android:layout_marginTop="6dp"
                android:text="Pharmacy"
                android:textColor="#F1F1F1"
                android:letterSpacing="0.6"
                android:background="@drawable/btnblue"
                android:layout_width="match_parent"
                android:layout_height="190px"
                android:id="@+id/button_ph"
                 android:drawableLeft="@drawable/ic_action_pharmacy"
                android:paddingLeft="20dp"
    android:textSize="20sp"
                android:textAlignment="textStart"
                 android:drawablePadding="30dp"/>
            <Button
                android:layout_marginTop="6dp"
                android:text="Hospital"
                android:layout_width="match_parent"
                android:layout_height="190px"
                android:id="@+id/button_hs" 
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_action_hospital"
                android:textColor="#F1F1F1"
                android:letterSpacing="0.6"
                android:background="@drawable/btnblue"
    android:textSize="20sp"
             android:textAlignment="textStart"  
                 android:drawablePadding="30dp"/>
                 <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />
            
          <!--   <ProgressBar android:id="@+id/circularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp" android:layout_height="250dp"
                android:indeterminate="false" android:max="100" android:progress="50"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circlebardesign" 
                android:secondaryProgress="100" />
            <TextView android:id="@+id/tv" android:layout_width="250dp" 
                android:layout_height="250dp" android:gravity="center" 
                android:text="25%" android:layout_centerInParent="true" 
                android:textSize="20sp" android:visibility="gone" />  -->

       </LinearLayout>
   </LinearLayout>

        
    </RelativeLayout>
</ScrollView>
